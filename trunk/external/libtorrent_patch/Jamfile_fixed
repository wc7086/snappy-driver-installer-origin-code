import modules ;

BOOST_ROOT = [ modules.peek : BOOST_ROOT ] ;

use-project /torrent : .. ;

if $(BOOST_ROOT)
{
    use-project /boost : $(BOOST_ROOT) ;
}
variant myrelease : release : <link>static <runtime-link>static <threading>multi <boost>source <boost-link>static <deprecated-functions>off <rtti>off <geoip>off <asserts>production <debug-symbols>off <iconv>off <i2p>off <ipv6>off ;
variant myrelease64 : release : <link>static <runtime-link>static <threading>multi <boost>source <boost-link>static <deprecated-functions>off <rtti>off <geoip>off <asserts>production <debug-symbols>off <iconv>off <i2p>off <ipv6>off ;

variant mydebug : debug : <link>static <runtime-link>static <threading>multi <boost>source <boost-link>static <deprecated-functions>off <rtti>off <geoip>off <asserts>on <debug-symbols>on <iconv>off <i2p>off <ipv6>off ;
variant mydebug64 : debug : <link>static <runtime-link>static <threading>multi <boost>source <boost-link>static <deprecated-functions>off <rtti>off <geoip>off <asserts>on <debug-symbols>on <iconv>off <i2p>off <ipv6>off ;

project client_test
   : requirements
    <threading>multi <library>/torrent//torrent
    : default-build
    <link>static
   ;

exe client_test : client_test.cpp ;

exe simple_client : simple_client.cpp ;
exe dump_torrent : dump_torrent.cpp ;
exe make_torrent : make_torrent.cpp ;
exe connection_tester : connection_tester.cpp ;
exe rss_reader : rss_reader.cpp ;
exe upnp_test : upnp_test.cpp ;

install stage_client_test : client_test : <location>. ;
install stage_connection_tester : connection_tester : <location>. ;
